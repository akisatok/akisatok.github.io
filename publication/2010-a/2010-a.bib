 keywords = {カーネル密度推定,トピックモデル推定,半教師付き学習,正準相関分析,音響信号自動タグ付け・検索},
 number = {330},
 pages = {1--6},
 publisher = {社団法人電子情報通信学会},
 title = {半教師付き正準密度推定法に基づく音響信号の自動タグ付けと検索},
 url = {http://ci.nii.ac.jp/naid/110008675742/},
